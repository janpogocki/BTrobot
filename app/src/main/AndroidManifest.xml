<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.btrobot.btrobot">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchBTActivity"
            android:label="Szukaj urządzeń Bluetooth" />
        <activity
            android:name=".Mode2Activity"
            android:label="2. Manualna odległość" />
        <activity android:name=".Mode4Activity"
            android:label="4. Tryb manualny"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>